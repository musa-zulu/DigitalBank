{
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "D:\\Logs\\log-{Date}.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=(local)\\sqlexpress;Initial Catalog=DigitalBankDb;Integrated Security=True",
          "sinkOptionsSection": {
            "tableName": "Logs",
            "schemaName": "EventLogging",
            "autoCreateSqlTable": true
          },
          "restrictedToMinimumLevel": "Warning"
        }
      }
    ],
    "Properties": {
      "Application": "Digital bank application"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DigitalBankConn": "Data Source=(local)\\SQLexpress;Initial Catalog=DigitalBankDb;Integrated Security=True"
  },
  "MailSettings": {
    "Mail": "digitalbank@gmail.com",
    "DisplayName": "Digital bank",
    "Password": "YourGmailPassword",
    "Host": "smtp.gmail.com",
    "Port": 587
  }
}
